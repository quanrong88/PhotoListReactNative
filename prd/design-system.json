{
  "name": "Beion Financial Dashboard Design System",
  "version": "1.0.0",
  "description": "Design system extracted from Beion cryptocurrency/financial trading dashboard interface",
  "colors": {
    "primary": {
      "50": "#F8FAFC",
      "100": "#F1F5F9",
      "500": "#6366F1",
      "600": "#5B5BF6",
      "700": "#4F46E5",
      "900": "#312E81",
      "usage": "Primary brand color for buttons, links, and key interactive elements"
    },
    "secondary": {
      "500": "#8B5CF6",
      "600": "#7C3AED",
      "700": "#6D28D9",
      "usage": "Secondary accent color for gradients and highlights"
    },
    "neutral": {
      "50": "#FAFAFA",
      "100": "#F4F4F5",
      "200": "#E4E4E7",
      "300": "#D4D4D8",
      "400": "#A1A1AA",
      "500": "#71717A",
      "600": "#52525B",
      "700": "#3F3F46",
      "800": "#27272A",
      "900": "#18181B",
      "usage": "Text colors, borders, and background variations"
    },
    "success": {
      "500": "#10B981",
      "600": "#059669",
      "usage": "Positive values, success states, buy actions"
    },
    "warning": {
      "500": "#F59E0B",
      "600": "#D97706",
      "usage": "Bitcoin/crypto currency indicators, attention states"
    },
    "error": {
      "500": "#EF4444",
      "600": "#DC2626",
      "usage": "Negative values, error states, sell actions"
    },
    "background": {
      "gradient": "linear-gradient(135deg, #8B5CF6 0%, #6366F1 50%, #3B82F6 100%)",
      "card": "#FFFFFF",
      "secondary": "#F8FAFC",
      "usage": "Main backgrounds and card surfaces"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": {
        "value": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "usage": "Primary font stack for all text elements"
      }
    },
    "fontSizes": {
      "xs": {
        "value": "0.75rem",
        "lineHeight": "1rem",
        "usage": "Small labels, captions"
      },
      "sm": {
        "value": "0.875rem",
        "lineHeight": "1.25rem",
        "usage": "Body text, form inputs"
      },
      "base": {
        "value": "1rem",
        "lineHeight": "1.5rem",
        "usage": "Default body text"
      },
      "lg": {
        "value": "1.125rem",
        "lineHeight": "1.75rem",
        "usage": "Large body text"
      },
      "xl": {
        "value": "1.25rem",
        "lineHeight": "1.75rem",
        "usage": "Small headings"
      },
      "2xl": {
        "value": "1.5rem",
        "lineHeight": "2rem",
        "usage": "Medium headings, card titles"
      },
      "3xl": {
        "value": "1.875rem",
        "lineHeight": "2.25rem",
        "usage": "Large headings, main values"
      }
    },
    "fontWeights": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "spacing": {
    "0": "0px",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem",
    "usage": "8pt grid system for consistent spacing"
  },
  "borderRadius": {
    "none": "0px",
    "sm": "0.125rem",
    "default": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#6366F1",
        "color": "#FFFFFF",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "border": "none",
        "boxShadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "usage": "Main call-to-action buttons"
      },
      "secondary": {
        "backgroundColor": "#F8FAFC",
        "color": "#374151",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "border": "1px solid #E5E7EB",
        "usage": "Secondary actions"
      },
      "small": {
        "padding": "0.5rem 1rem",
        "fontSize": "0.75rem",
        "usage": "Compact buttons in data tables"
      }
    },
    "card": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "1rem",
        "padding": "1.5rem",
        "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
        "border": "1px solid #F3F4F6",
        "usage": "Main content containers"
      }
    },
    "sidebar": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "width": "240px",
        "padding": "1.5rem",
        "borderRight": "1px solid #E5E7EB",
        "usage": "Navigation sidebar"
      }
    },
    "searchInput": {
      "default": {
        "backgroundColor": "#F9FAFB",
        "border": "1px solid #E5E7EB",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "usage": "Search and form inputs"
      }
    },
    "chart": {
      "lineColor": "#6366F1",
      "gridColor": "#F3F4F6",
      "backgroundColor": "transparent",
      "usage": "Financial chart styling"
    },
    "dataTable": {
      "headerBackground": "#F9FAFB",
      "borderColor": "#E5E7EB",
      "rowPadding": "0.75rem 1rem",
      "fontSize": "0.875rem",
      "usage": "Data tables and asset listings"
      },
    "badge": {
      "positive": {
        "backgroundColor": "#DCFCE7",
        "color": "#166534",
        "fontSize": "0.75rem",
        "padding": "0.25rem 0.5rem",
        "borderRadius": "0.375rem"
      },
      "negative": {
        "backgroundColor": "#FEE2E2",
        "color": "#991B1B",
        "fontSize": "0.75rem",
        "padding": "0.25rem 0.5rem",
        "borderRadius": "0.375rem"
      }
    }
  },
  "layout": {
    "maxWidth": {
      "container": "1280px",
      "content": "1024px"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem"
    }
  },
  "icons": {
    "size": {
      "sm": "16px",
      "md": "20px",
      "lg": "24px",
      "xl": "32px"
    },
    "style": "outline",
    "usage": "Consistent icon sizing throughout the interface"
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)"
    }
  },
  "cssCustomProperties": {
    "--color-primary": "#6366F1",
    "--color-secondary": "#8B5CF6",
    "--color-neutral-900": "#18181B",
    "--color-neutral-100": "#F4F4F5",
    "--color-success": "#10B981",
    "--color-warning": "#F59E0B",
    "--color-error": "#EF4444",
    "--font-family-primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
    "--spacing-unit": "0.25rem",
    "--border-radius-default": "0.5rem",
    "--shadow-default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
  },
  "usage_guidelines": {
    "colors": "Use primary colors for main actions and branding, neutral colors for text and backgrounds, semantic colors (success, warning, error) for status indicators",
    "typography": "Maintain consistent font weights and sizes throughout the interface. Use the font size scale for hierarchical text organization",
    "spacing": "Follow the 8pt grid system for all spacing decisions. Use consistent padding and margins",
    "components": "All components should follow the established patterns for consistent user experience",
    "accessibility": "Ensure sufficient color contrast ratios and provide focus states for all interactive elements"
  }
}